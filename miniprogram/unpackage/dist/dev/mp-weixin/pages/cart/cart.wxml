<view class="container"><block wx:if="{{$root.g0===0}}"><view class="empty-cart"><text>购物车是空的</text><button size="mini" data-event-opts="{{[['tap',[['goMenu',['$event']]]]]}}" bindtap="__e">去点餐</button></view></block><block wx:else><view class="cart-list"><block wx:for="{{cart}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="cart-item"><image class="item-img" src="{{item.pictureUrl}}" mode="aspectFill"></image><view class="item-info"><text class="title">{{item.name}}</text><block wx:if="{{item.spec}}"><text class="spec">{{item.spec}}</text></block><view class="price-box"><text class="price">{{"¥"+item.price}}</text><view class="number-box"><text data-event-opts="{{[['tap',[['updateCount',['$0',-1],[[['cart','',index]]]]]]]}}" class="btn" bindtap="__e">-</text><text class="num">{{item.count}}</text><text data-event-opts="{{[['tap',[['updateCount',['$0',1],[[['cart','',index]]]]]]]}}" class="btn" bindtap="__e">+</text></view></view></view></view></block></view></block><block wx:if="{{$root.g1>0}}"><view class="footer"><view class="total"> 合计: <text class="price">{{"¥"+cartTotal}}</text></view><button data-event-opts="{{[['tap',[['checkout',['$event']]]]]}}" class="checkout-btn" bindtap="__e">去结算</button></view></block></view>