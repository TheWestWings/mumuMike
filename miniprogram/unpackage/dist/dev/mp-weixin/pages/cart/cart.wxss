/* uni.scss */
.container {
  padding-bottom: 120rpx;
}
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.empty-cart text {
  margin-bottom: 30rpx;
  color: #909399;
}
.cart-list {
  padding: 20rpx;
}
.cart-item {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.cart-item .item-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.cart-item .item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-item .item-info .title {
  font-size: 30rpx;
  font-weight: bold;
}
.cart-item .item-info .spec {
  font-size: 24rpx;
  color: #909399;
}
.cart-item .item-info .price-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-item .item-info .price-box .price {
  color: #f56c6c;
  font-size: 32rpx;
  font-weight: bold;
}
.cart-item .item-info .price-box .number-box {
  display: flex;
  align-items: center;
}
.cart-item .item-info .price-box .number-box .btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #f5f7fa;
  border-radius: 50%;
  font-size: 32rpx;
}
.cart-item .item-info .price-box .number-box .num {
  margin: 0 20rpx;
  font-size: 28rpx;
}
.footer {
  position: fixed;
  bottom: 0px;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.footer .total {
  flex: 1;
  font-size: 30rpx;
}
.footer .total .price {
  color: #f56c6c;
  font-weight: bold;
  font-size: 36rpx;
  margin-left: 10rpx;
}
.footer .checkout-btn {
  background-color: #8d6e63;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 60rpx;
}
