<view class="container"><view class="section"><text class="section-title">{{"当前桌号: "+(tableId||'未扫码')}}</text></view><view class="section"><block wx:for="{{cart}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="order-item"><view class="item-left"><text class="name">{{item.name}}</text><block wx:if="{{item.spec}}"><text class="spec">{{item.spec}}</text></block></view><view class="item-right"><text class="count">{{"x"+item.count}}</text><text class="price">{{"¥"+item.price*item.count}}</text></view></view></block></view><view class="section"><view class="remark-box"><text class="label">备注</text><input class="input" type="text" placeholder="请输入口味、偏好等要求" data-event-opts="{{[['input',[['__set_model',['','remark','$event',[]]]]]]}}" value="{{remark}}" bindinput="__e"/></view></view><view class="footer"><view class="total"> 合计: <text class="price">{{"¥"+cartTotal}}</text></view><button class="pay-btn" loading="{{loading}}" data-event-opts="{{[['tap',[['submitOrder',['$event']]]]]}}" bindtap="__e">立即支付</button></view></view>