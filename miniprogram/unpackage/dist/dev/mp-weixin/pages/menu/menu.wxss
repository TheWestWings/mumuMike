/* uni.scss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #FDF6E3;
  /* Web version background */
}
.main {
  flex: 1;
  display: flex;
  overflow: hidden;
}
.left-aside {
  flex: 0 0 200rpx;
  background-color: #fff;
  /* Changed to white or keep grey? Web uses #FDF6E3 for main, maybe sidebar white? */
  /* Let's keep sidebar distinct but maybe lighter */
  background-color: #f2f2f2;
  height: 100%;
}
.f-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.f-item.active {
  background-color: #FDF6E3;
  /* Match right side bg */
  color: #333;
  font-weight: bold;
}
.f-item.active:before {
  content: "";
  position: absolute;
  left: 0;
  top: 30rpx;
  height: 40rpx;
  width: 8rpx;
  background-color: #333;
  /* Darker accent */
  border-radius: 0 4rpx 4rpx 0;
}
.right-aside {
  flex: 1;
  background-color: #FDF6E3;
  /* Web version background */
  height: 100%;
  padding-bottom: 100rpx;
}
.s-list {
  width: 100%;
}
.s-item {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  background-color: transparent;
  /* Remove grey bg */
  padding-left: 30rpx;
  margin-top: 10rpx;
}
.t-list {
  padding: 20rpx;
}
.t-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  /* Web version radius */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  /* Web version shadow */
}
.t-item .t-img {
  width: 160rpx;
  /* Slightly larger */
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  /* Prevent image shrinking */
}
.t-item .right-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  /* Fix for flex item overflow */
  height: 160rpx;
  /* Match image height to ensure vertical spacing */
}
.t-item .right-content .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.t-item .right-content .desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 0;
}
.t-item .right-content .price-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.t-item .right-content .price-box .price {
  font-size: 32rpx;
  color: #dd524d;
  font-weight: bold;
}
.t-item .right-content .price-box .action-box {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  /* Prevent compression */
}
.t-item .right-content .price-box .action-box .add-btn, .t-item .right-content .price-box .action-box .minus-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
}
.t-item .right-content .price-box .action-box .add-btn {
  background-color: #007aff;
  color: #fff;
}
.t-item .right-content .price-box .action-box .minus-btn {
  background-color: #fff;
  border: 1px solid #ccc;
  color: #666;
  box-sizing: border-box;
  line-height: 46rpx;
  /* Adjust for border */
}
.t-item .right-content .price-box .action-box .count {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}
.cart-bar {
  position: fixed;
  bottom: 0px;
  left: 30rpx;
  right: 30rpx;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 99;
  border-radius: 50rpx;
  /* Floating pill style */
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}
.cart-bar .cart-icon {
  position: relative;
  margin-right: 30rpx;
  color: #fff;
}
.cart-bar .cart-icon .badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #dd524d;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  border-radius: 20rpx;
}
.cart-bar .price-info {
  flex: 1;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
.cart-bar .pay-btn {
  background-color: #f0ad4e;
  /* Warning color or primary */
  color: #fff;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
}
