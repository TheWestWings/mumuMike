/* uni.scss */
.container {
  padding: 30rpx;
}
.form-group {
  margin-bottom: 30rpx;
}
.form-group .label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.form-group .input {
  border: 1px solid #eee;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  background-color: #fff;
}
.form-group .textarea {
  border: 1px solid #eee;
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.submit-btn {
  background-color: #007aff;
  color: #fff;
  margin-top: 50rpx;
}
