/* pages/orderDetail/orderDetail.wxss - 订单详情页样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 头部状态 */
.header {
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.status-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.status-hint {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #909399;
}

.info-value {
  font-size: 28rpx;
  color: #303133;
}

/* 商品列表 */
.product-list {
  margin-top: 16rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.product-remark {
  font-size: 24rpx;
  color: #909399;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  margin-bottom: 8rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.product-price {
  font-size: 28rpx;
  color: #303133;
}

.product-count {
  font-size: 26rpx;
  color: #909399;
}

.product-status {
  position: absolute;
  top: 20rpx;
  right: 0;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.product-status.status-0 {
  color: #e6a23c;
  background-color: rgba(230, 162, 60, 0.1);
}

.product-status.status-1 {
  color: #67c23a;
  background-color: rgba(103, 194, 58, 0.1);
}

.product-status.status-2 {
  color: #909399;
  background-color: rgba(144, 147, 153, 0.1);
}

/* 价格汇总 */
.summary {
  margin-top: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.summary-label {
  font-size: 28rpx;
  color: #606266;
}

.summary-value {
  font-size: 28rpx;
  color: #303133;
}

.summary-item.total {
  margin-top: 16rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.summary-item.total .summary-label {
  font-size: 30rpx;
  font-weight: bold;
}

.summary-item.total .summary-value.price {
  font-size: 40rpx;
  color: #f56c6c;
  font-weight: bold;
}

/* 底部操作 */
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 40rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.3);
}

/* 加载状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-text {
  color: #909399;
  font-size: 28rpx;
}
