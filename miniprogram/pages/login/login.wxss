/* pages/login/login.wxss - 登录页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8d6e63 0%, #FDF6E3 50%);
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

/* 头部 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 80rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.input-item {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  height: 100rpx;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.3);
}

.login-btn:active {
  transform: scale(0.98);
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: #e0e0e0;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #909399;
}

/* 微信登录按钮 */
.wx-login-btn {
  width: 100%;
  height: 96rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.wx-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.wx-login-btn:active {
  transform: scale(0.98);
}

/* 切换注册 */
.switch-section {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.switch-text {
  font-size: 28rpx;
  color: #909399;
}

.switch-link {
  font-size: 28rpx;
  color: #8d6e63;
  font-weight: 500;
}

/* 用户协议 */
.agreement {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.checkbox-wrapper {
  padding: 10rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #c0c4cc;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}

.checkbox.checked {
  background-color: #8d6e63;
  border-color: #8d6e63;
}

.agreement-text {
  font-size: 24rpx;
  color: #909399;
  margin-left: 8rpx;
}

.agreement-text .link {
  color: #8d6e63;
}

/* 注册弹窗 */
.register-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  padding: 30rpx;
}

.modal-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
