/* pages/cart/cart.wxss - 购物车页面样式 */

.container {
  min-height: 100vh;
  background-color: #FDF6E3;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
}

.header-left {
  width: 80rpx;
}

.back-icon {
  color: #fff;
  font-size: 40rpx;
}

.header-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.header-right {
  width: 80rpx;
  text-align: right;
}

.clear-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 桌号信息 */
.table-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.table-label {
  font-size: 28rpx;
  color: #606266;
}

.table-no {
  font-size: 32rpx;
  color: #8d6e63;
  font-weight: bold;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
  padding: 0 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.item-remark {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 8rpx;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: bold;
}

.item-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn text {
  font-size: 32rpx;
  line-height: 1;
}

.action-btn.minus {
  background-color: #f5f5f5;
  color: #606266;
}

.action-btn.plus {
  background-color: #8d6e63;
  color: #fff;
}

.item-count {
  min-width: 60rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.remark-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 32rpx;
}

.bottom-space {
  height: 200rpx;
}

/* 空购物车 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #303133;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 40rpx;
}

.go-order-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.checkout-info {
  display: flex;
  flex-direction: column;
}

.total-row {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 28rpx;
  color: #606266;
}

.total-price {
  font-size: 40rpx;
  color: #f56c6c;
  font-weight: bold;
}

.total-count {
  font-size: 24rpx;
  color: #909399;
  margin-top: 4rpx;
}

.submit-btn {
  width: 240rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
}

/* 备注弹窗 */
.remark-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.remark-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-btn.cancel {
  background-color: #f5f5f5;
  color: #606266;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
}
