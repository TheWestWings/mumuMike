/* pages/user/user.wxss - 个人中心页样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户头部 */
.user-header {
  position: relative;
  padding: 80rpx 40rpx 60rpx;
  overflow: hidden;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
}

.user-info {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar.default {
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
}

.username {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-phone {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
}

/* 菜单区域 */
.menu-section {
  padding: 20rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #303133;
}

.menu-badge {
  min-width: 36rpx;
  height: 36rpx;
  background-color: #f56c6c;
  color: #fff;
  font-size: 22rpx;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  margin-right: 16rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #c0c4cc;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #f56c6c;
  font-size: 30rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #f56c6c;
}

.logout-btn:active {
  background-color: #fef0f0;
}

/* 底部 */
.footer {
  text-align: center;
  padding: 40rpx;
}

.footer text {
  font-size: 24rpx;
  color: #c0c4cc;
}

/* 消息弹窗 */
.message-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 70vh;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
  padding: 10rpx;
}

.message-list {
  flex: 1;
  padding: 20rpx;
  height: 50vh;
  max-height: 50vh;
}

.message-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.message-item.unread {
  background-color: #fff;
  border-left: 6rpx solid #8d6e63;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.message-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
}

.message-item.unread .message-title {
  color: #8d6e63;
}

.message-time {
  font-size: 22rpx;
  color: #909399;
}

.message-content {
  font-size: 26rpx;
  color: #606266;
  line-height: 1.5;
}

.empty-message {
  text-align: center;
  padding: 60rpx;
  color: #909399;
}
