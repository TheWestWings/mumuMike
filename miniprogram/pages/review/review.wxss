/* pages/review/review.wxss - 评价/反馈页面样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

/* 区块样式 */
.rating-section,
.content-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
  display: block;
}

/* 评分区域 */
.rating-stars {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.star {
  font-size: 60rpx;
  opacity: 0.3;
  transition: all 0.3s;
}

.star.active {
  opacity: 1;
  transform: scale(1.1);
}

.rating-text {
  text-align: center;
  font-size: 28rpx;
  color: #8d6e63;
  display: block;
}

/* 内容输入 */
.input-item {
  margin-bottom: 24rpx;
}

.title-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.textarea-wrapper {
  position: relative;
}

.content-textarea {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #c0c4cc;
}

/* 提交按钮 */
.submit-section {
  padding: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
}
