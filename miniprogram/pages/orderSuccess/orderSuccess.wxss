/* pages/orderSuccess/orderSuccess.wxss - 订单提交成功页样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 60rpx;
}

/* 成功图标区域 */
.success-section {
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounceIn 0.6s ease-out;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.success-title {
  color: #fff;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.success-hint {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #909399;
}

.info-value {
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
}

.info-value.price {
  font-size: 36rpx;
  color: #f56c6c;
  font-weight: bold;
}

/* 支付状态 */
.payment-section {
  margin: 0 30rpx 30rpx;
}

.payment-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 12rpx;
}

.payment-status.success {
  background-color: rgba(103, 194, 58, 0.1);
}

.payment-status.pending {
  background-color: rgba(230, 162, 60, 0.1);
}

.status-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
}

.payment-status.success .status-text {
  color: #67c23a;
}

.payment-status.pending .status-text {
  color: #e6a23c;
}

/* 操作按钮 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.3);
}

.action-btn.secondary {
  background-color: #fff;
  color: #8d6e63;
  border: 2rpx solid #8d6e63;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 温馨提示 */
.tips-section {
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
  display: block;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #909399;
  line-height: 1.6;
}
