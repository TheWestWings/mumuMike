/* pages/index/index.wxss - 扫码入口页样式 */

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #8d6e63 0%, #5d4037 100%);
}

.header {
  padding: 100rpx 40rpx 60rpx;
  text-align: center;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.logo-text {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

.slogan {
  color: rgba(255, 255, 255, 0.9);
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

.content {
  flex: 1;
  background: #FDF6E3;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx;
  margin-top: 40rpx;
}

.scan-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.scan-icon {
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.3);
  transition: transform 0.3s, box-shadow 0.3s;
}

.scan-icon:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.3);
}

.scan-icon .iconfont {
  font-size: 80rpx;
  color: #fff;
}

.scan-text {
  font-size: 36rpx;
  color: #303133;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.scan-hint {
  font-size: 26rpx;
  color: #909399;
}

.table-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.table-label {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 10rpx;
}

.table-no {
  font-size: 60rpx;
  color: #8d6e63;
  font-weight: bold;
}

.quick-entry {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.entry-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  transition: transform 0.3s;
}

.entry-btn:active {
  transform: scale(0.98);
}

.entry-btn.primary {
  background: linear-gradient(135deg, #8d6e63 0%, #a88e85 100%);
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.3);
}

.entry-btn.secondary {
  background: #fff;
  border: 2rpx solid #8d6e63;
}

.entry-btn.primary .btn-icon,
.entry-btn.primary .btn-text {
  color: #fff;
}

.entry-btn.secondary .btn-icon,
.entry-btn.secondary .btn-text {
  color: #8d6e63;
}

.btn-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 500;
}

.footer {
  padding: 30rpx;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
