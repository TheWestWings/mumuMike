/* app.wxss - 全局样式 */

/* 主题色变量 */
page {
  --primary-color: #8d6e63;
  --primary-light: #a88e85;
  --primary-dark: #5d4037;
  --secondary-color: #FDF6E3;
  --text-primary: #303133;
  --text-regular: #606266;
  --text-secondary: #909399;
  --text-placeholder: #c0c4cc;
  --border-color: #dcdfe6;
  --success-color: #67c23a;
  --warning-color: #e6a23c;
  --danger-color: #f56c6c;
  --info-color: #909399;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--secondary-color);
}

/* 清除默认样式 */
view, text, image, button, input, textarea {
  box-sizing: border-box;
}

button {
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
}

button::after {
  border: none;
}

/* 通用flex布局 */
.flex {
  display: flex;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 通用边距 */
.m-10 { margin: 20rpx; }
.m-20 { margin: 40rpx; }
.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }
.ml-10 { margin-left: 20rpx; }
.mr-10 { margin-right: 20rpx; }

.p-10 { padding: 20rpx; }
.p-20 { padding: 40rpx; }
.pt-10 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 20rpx; }
.pr-10 { padding-right: 20rpx; }

/* 通用文字 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.text-primary { color: var(--primary-color); }
.text-success { color: var(--success-color); }
.text-warning { color: var(--warning-color); }
.text-danger { color: var(--danger-color); }
.text-gray { color: var(--text-secondary); }

.text-bold { font-weight: bold; }
.text-sm { font-size: 24rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }

/* 通用按钮 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

.btn-outline {
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  background-color: transparent;
}

.btn-block {
  width: 100%;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: var(--text-secondary);
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
}

/* 价格样式 */
.price {
  color: var(--danger-color);
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 24rpx;
}

/* 徽标 */
.badge {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: var(--danger-color);
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 安全区域底部 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
